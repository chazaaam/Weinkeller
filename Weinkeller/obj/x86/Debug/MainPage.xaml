            </NavigationViewItem>
            <NavigationViewItem Tag="add" Icon="Back" FontSize="36" Margin="0,0,0,0" HorizontalAlignment="Left">
                <TextBlock Tag="Nav_Next"></TextBlock>
            </NavigationViewItem>
            <NavigationViewItem Tag="add" Icon="Forward" FontSize="36" Margin="0,0,0,0" HorizontalAlignment="Left">
